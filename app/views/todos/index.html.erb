<h1>TODO LIST</h1>
<div>
  <%= link_to "新規todoを作成", new_todo_path %>
</div>
<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">締め切り</th>
      <th scope="col">やること</th>
      <th scope="col">操作</th>
    </tr>
  </thead>
  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= l(todo.deadline_time) %></td>
        <td><%= link_to "#{todo.content}", todo %></td>
        <td>
          <ul class="d-flex">
            <li><%= link_to "編集", edit_todo_path(todo) %></li>
            <li><%= link_to "削除", todo_path(todo), method: :delete, data: {confirm: "本当に削除しますか？"} %></li>
            <li>完了</li>
          </ul>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
